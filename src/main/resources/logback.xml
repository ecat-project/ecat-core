<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- TurboFilter: 自动设置 MDC 坐标 -->
    <turboFilter class="com.ecat.core.Log.ClassLoaderCoordinateFilter"/>

    <!-- 注册自定义转换器 -->
    <conversionRule conversionWord="callerEx" converterClass="com.ecat.core.Utils.CallerDataConverter" />
    <conversionRule conversionWord="coordinate" converterClass="com.ecat.core.Utils.CoordinateConverter"/>

    <!-- 日志输出格式 -->
    <property name="log.pattern" value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%callerEx] - %msg%n" />
    <property name="log.pattern.coordinate" value="%d{HH:mm:ss.SSS} [%coordinate] [%thread] %-5level %logger{36} - %msg%n" />

    <!-- 日志存放路径 项目根目录/logs -->
    <property name="log.path" value="logs" />

    <!-- 单个日志文件最大大小 -->
    <property name="max.file.size" value="50MB" />
    <!-- 总日志体积上限 -->
    <property name="total.size.cap" value="5GB" />

    <!-- 控制台输出 -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
    </appender>

    <!-- 文件输出 - 所有日志 -->
    <appender name="file_all" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/ecat-all.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/ecat-all.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>${max.file.size}</maxFileSize>
            <totalSizeCap>${total.size.cap}</totalSizeCap>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${log.pattern.coordinate}</pattern>
        </encoder>
    </appender>

    <!-- 文件输出 - DEBUG日志 -->
    <appender name="file_debug" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/ecat-debug.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/ecat-debug.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>${max.file.size}</maxFileSize>
            <totalSizeCap>${total.size.cap}</totalSizeCap>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${log.pattern.coordinate}</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- 文件输出 - ERROR日志 -->
    <appender name="file_error" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/ecat-error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/ecat-error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>${max.file.size}</maxFileSize>
            <totalSizeCap>${total.size.cap}</totalSizeCap>
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${log.pattern.coordinate}</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- SiftingAppender: 按插件分离日志文件 -->
    <appender name="file_integration" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator>
            <key>integration.coordinate</key>
            <defaultValue>core</defaultValue>
        </discriminator>
        <sift>
            <appender name="FILE-${integration.coordinate}" class="ch.qos.logback.core.rolling.RollingFileAppender">
                <file>${log.path}/integrations/${integration.coordinate}/ecat.log</file>
                <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                    <fileNamePattern>${log.path}/integrations/${integration.coordinate}/ecat.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                    <maxFileSize>${max.file.size}</maxFileSize>
                    <totalSizeCap>1GB</totalSizeCap>
                    <maxHistory>7</maxHistory>
                </rollingPolicy>
                <encoder>
                    <pattern>${log.pattern.coordinate}</pattern>
                </encoder>
            </appender>
        </sift>
    </appender>

    <!-- 广播 Appender: 将日志推送到 SSE -->
    <appender name="broadcast" class="com.ecat.core.Log.LogBroadcastAppender"/>

    <!-- 日志级别控制 -->
    <!-- 启用 ecat 核心和集成的 debug 日志 -->
    <logger name="com.ecat" level="debug" additivity="false">
        <appender-ref ref="console" />
        <appender-ref ref="file_all" />
        <appender-ref ref="file_debug" />
        <appender-ref ref="file_error" />
        <appender-ref ref="file_integration" />
        <appender-ref ref="broadcast" />
    </logger>

    <!-- ruoyi 框架日志级别 -->
    <logger name="com.ruoyi" level="info" />
    <logger name="org.springframework" level="warn" />

    <!-- 根日志级别 -->
    <root level="info">
        <appender-ref ref="console" />
        <appender-ref ref="file_all" />
        <appender-ref ref="file_error" />
        <appender-ref ref="file_integration" />
        <appender-ref ref="broadcast" />
    </root>
</configuration>
